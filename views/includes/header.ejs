<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TimeKeeping</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if (isAuthenticated) { %>
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/userInfo">User Infomation</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/workTimeAndSalary"
                >WorkTime and Salary</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/covid">Covid</a>
            </li>
            <!-- Manager confirmTimekeeping -->
            <% if (user.role === 'manager') { %>
            <li class="nav-item">
              <a href="/confirmTimekeeping" class="nav-link active"
                >Confirm Timekeeping</a
              >
            </li>
            <% } %> <% } %>
          </ul>
          <div class="d-flex flex-row-reverse">
            <ul class="navbar-nav">
              <% if (!isAuthenticated) { %>
              <li class="nav-item">
                <a class="nav-link active" href="/login">Login</a>
              </li>
              <% } else { %>
              <!-- <a class="nav-link active" href="/logout">Logout</a> -->
              <li class="nav-item">
                <form action="/logout" method="post">
                  <button
                    type="submit"
                    class="nav-link active border-0 bg-dark"
                  >
                    Logout
                  </button>
                </form>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </body>
</html>
